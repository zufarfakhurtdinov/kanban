<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <g:HTMLPanel ui:field="main">
        <g:FlowPanel ui:field="textPanel" addStyleNames="{style.relative}">
            <b:Heading ui:field="text" size="5" addStyleNames="{style.dragCursor} {style.heading} "/>
            <b:Button ui:field="delete" addStyleNames="{style.button}">x</b:Button>
        </g:FlowPanel>
        <b:TextBox ui:field="textEdit" visible="false"/>
    </g:HTMLPanel>

    <ui:style>
        .dragCursor {
            cursor: move; /* fallback if grab cursor is unsupported */
            cursor: -moz-grab;
            cursor: -webkit-grab;
        }
        .relative{
            position: relative;
        }
        .heading{
            margin: 0;
            padding: 10px 0;
        }
        .button{
            position: absolute;
            top: 0;
            right: 0;
        }
    </ui:style>
</ui:UiBinder>