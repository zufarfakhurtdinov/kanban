<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
    <div ui:field="main" class="{style.width} {style.tasklist}" draggable="true">
        <input type="hidden">
            <span ui:field="name"/>
            <button ui:field="delete">x</button>
        </input>
        <div ui:field="children"/>
        <button ui:field="addNew">Add new task</button>
    </div>
    <ui:style>
        .width{
            width: 200px;
        }
        .tasklist{
            border: dotted grey;
        }
    </ui:style>
</ui:UiBinder>